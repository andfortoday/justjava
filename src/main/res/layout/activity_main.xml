<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zippitybippity.kevinski.justjava.MainActivity">

    <TextView
        android:id="@+id/cuantos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spFromTop"
        android:paddingBottom="@dimen/spFromOther"
        android:layout_marginLeft="@dimen/spFromLeft"
        android:text="@string/capcuantos"
        android:textAllCaps="true"

        />

    <Button
        android:layout_width="@dimen/btnchangevalw"
        android:layout_height="@dimen/btnvchangevalh"
        android:layout_marginLeft="@dimen/spFromLeft"
        android:layout_marginBottom="@dimen/spFromOther"
        android:text="@string/plusbtn"
        android:textAllCaps="true"
        android:onClick="goup"

        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spFromOther"
        android:layout_marginLeft="@dimen/spFromLeft"
        android:textColor="@color/blackaroo"
        android:textSize="16sp"
        android:text="0"

        />
<!--    android:text="@string/thenumber"
        android:text="2"
-->

    <Button
        android:layout_width="@dimen/btnchangevalw"
        android:layout_height="@dimen/btnvchangevalh"
        android:layout_marginLeft="@dimen/spFromLeft"
        android:layout_marginBottom="@dimen/spFromOther"
        android:text="@string/minusbtn"
        android:textAllCaps="true"
        android:onClick="godown"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/capcost"
        android:paddingBottom="@dimen/spFromOther"
        android:layout_marginLeft="@dimen/spFromLeft"

        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="$0.00"
        android:paddingBottom="@dimen/spFromOther"
        android:paddingLeft="@dimen/spFromLeft"
        android:textColor="@color/blackaroo"

        />

    <!-- android:text="@string/dollamt" -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spFromLeft"
        android:text="@string/orderbtn"
        android:textAllCaps="true"
        android:onClick="submitOrder"

        />


</LinearLayout>